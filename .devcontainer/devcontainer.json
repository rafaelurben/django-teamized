{
    "name": "Django Teamized Dev",
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "containerEnv": {
        "TEAMIZED_DEV_SERVER_HOST": "${localEnv:CODESPACE_NAME:}",
        "DJANGO_SETTINGS_MODULE": "devproject.settings"
    },
    "forwardPorts": [8000, 8081],
    "portsAttributes": {
        "8000": {
            "label": "Django",
            "onAutoForward": "notify"
        },
        "8081": {
            "label": "Liveserver",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "pip install -r requirements.txt -r requirements-dev.txt && pip install -e . && cd teamized/app && npm install",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "dbaeumer.vscode-eslint"
            ]
        }
    }
}
